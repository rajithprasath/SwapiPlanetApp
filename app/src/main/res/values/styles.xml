<resources>

        <!-- Components -->
    <style name="Theme.SwapiPlanetApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <!-- Appbar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
    </style>

    <!-- Toolbar menu -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Contextual action bar -->
    <style name="SpiderTracksContextualAppBar" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
    </style>


    <!-- Circle Progress indicator -->
    <style name="CircleProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/secondaryColor</item>
    </style>

    <style name="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleText.Large">
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="TitleText.Normal">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


</resources>
